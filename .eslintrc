{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 10,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "overrides": [
    {
      "files": [
        "**/setupTests.js"
      ],
      "env": {
        "jest": true
      }
    },
    {
      "files": [
        "**/*.test.js"
      ],
      "env": {
        "jest": true
      },
      "globals": {
        "React": true,
        "render": true,
        "fireEvent": true,
        "wait": true,
        "waitForElement": true
      },
      "plugins": [
        "jest"
      ]
    }
  ],
  "globals": {
    "__PATH_PREFIX__": "readonly"
  }
}
